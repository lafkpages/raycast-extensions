{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "bun",
  "title": "Bun",
  "description": "Extension for interacting with Bun.",
  "icon": "extension_icon.png",
  "author": "lafkpages",
  "categories": [
    "Developer Tools"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "version",
      "title": "Version",
      "description": "Shows the currently installed Bun version and revision.",
      "mode": "view",
      "keywords": [
        "-v",
        "--version",
        "rev",
        "revision",
        "upgrade",
        "update"
      ]
    },
    {
      "name": "blog",
      "title": "Blog and Changelogs",
      "description": "Read blog posts from bun.sh.",
      "mode": "view"
    },
    {
      "name": "docs",
      "title": "Documentation and Guides",
      "description": "Search the Bun docs and guides.",
      "mode": "view",
      "arguments": [
        {
          "type": "text",
          "name": "search",
          "placeholder": "Search"
        }
      ],
      "keywords": [
        "algolia"
      ]
    },
    {
      "name": "init",
      "title": "Initialize New Project",
      "description": "Use `bun init` to initialize a new project with Bun.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "openWith",
      "title": "Open with",
      "description": "The app that will be used when opening folders, for example when a project is initialized with the Initialize New Project command.",
      "type": "appPicker",
      "required": false
    }
  ],
  "dependencies": {
    "@apollo/client": "^3.9.5",
    "@raycast/api": "^1.67.1",
    "@raycast/utils": "^1.12.4",
    "algoliasearch": "^4.22.1",
    "cross-fetch": "^4.0.0",
    "escape-string-regexp": "^5.0.0",
    "graphql": "^16.8.1",
    "node-html-markdown": "^1.3.0",
    "rss-parser": "^3.13.0",
    "semver": "^7.6.0",
    "string-to-unicode-variant": "^1.0.9"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.2.3",
    "@graphql-typed-document-node/core": "^3.2.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.1.1",
    "@raycast/eslint-config": "^1.0.6",
    "@types/bun": "latest",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "format": "prettier --write .",
    "publish": "bunx @raycast/api@latest publish",
    "build": "ray build -e dist",
    "build-graphql": "graphql-codegen --config src/api/github/codegen.ts",
    "postinstall": "bun run build-graphql"
  },
  "trustedDependencies": [
    "@raycast/api"
  ]
}
